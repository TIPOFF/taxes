{
    "name": "tipoff/taxes",
    "description": "Laravel Package for implementing Ecommerce taxes",
    "keywords": [
        "tipoff",
        "taxes"
    ],
    "homepage": "https://github.com/tipoff/taxes",
    "license": "MIT",
    "authors": [
        {
            "name": "Tipoff",
            "email": "packages@tipoff.com",
            "role": "Developer"
        }
    ],
    "require": {
        "tipoff/support": "^1.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.3",
        "spatie/laravel-ray": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "Tipoff\\Taxes\\": "src",
            "Tipoff\\Taxes\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tipoff\\Taxes\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tipoff\\Taxes\\TaxesServiceProvider"
            ],
            "aliases": {
                "Taxes": "Tipoff\\Taxes\\TaxesFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
